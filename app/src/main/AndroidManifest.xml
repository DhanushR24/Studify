<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.studify_madproject">

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/student_icon96"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/student_icon96_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.StudifyMADProject">
        <activity
            android:name=".WebPageActivity"
            android:exported="false" />
        <activity
            android:name=".FiveUnitActivity"
            android:exported="false" />
        <activity
            android:name=".ThreeUnitActivity"
            android:exported="false" />
        <activity
            android:name=".EditNote"
            android:exported="false" />
        <activity
            android:name=".AddNote"
            android:exported="false"
            android:label="@string/title_activity_add_note"
            android:theme="@style/Theme.StudifyMADProject.NoActionBar" />
        <activity
            android:name=".NoteDetails"
            android:exported="false"
            android:label="@string/title_activity_note_details"
            android:theme="@style/Theme.StudifyMADProject.NoActionBar" />
        <activity
            android:name=".Dashboard"
            android:exported="false" />
        <activity
            android:name=".SignUp"
            android:exported="false" />
        <activity
            android:name=".Authenticate"
            android:exported="false" />
        <activity
            android:name=".MainActivity"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>